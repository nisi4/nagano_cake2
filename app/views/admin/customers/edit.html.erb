<div class="container-fluid">
  <div class="row my-3 offset-2">
    <h3 class="px-4" style="background-color:#e9ecef;"><%= @customer.full_name %>さんの会員情報編集</h3>
  </div>
  <div class="row">
    <% form_with model: @customer,url: admin_customer_path(@customer.id),method: :patch do |f| %>
    <table class="table">
       <tr>
         <td>会員ID</td>
         <td><%= @customer.id %></td>
         <td></td>
         <td></td>
       </tr>
       <tr>
         <td>氏名</td>
         <td><%= f.text_field :last_name %></td>
         <td><%= f.text_field :first_name %></td>
         <td></td>
       </tr>
       <tr>
         <td>フリガナ</td>
         <td><%= f.text_field :last_name_kana %></td>
         <td><%= f.text_field :first_name_kana %></td>
         <td></td>
       </tr>
       <tr>
         <td>郵便番号</td>
         <td><%= f.text_field :postal_code %></td>
         <td></td>
         <td></td>
       </tr>
       <tr>
         <td>住所</td>
         <td colspan="3"><%= f.text_field :address %></td>
       </tr>
       <tr>
         <td>電話番号</td>
         <td><%= f.text_field :telephone_number %></td>
         <td></td>
         <td></td>
       </tr>
       <tr>
         <td>メールアドレス</td>
         <td><%= f.text_field :email %></td>
         <td></td>
         <td></td>
       </tr>
       <tr>
         <td>会員ステータス</td>
         <td><%= f.radio_button :is_deleted, :false %>有効 <%=f.radio_button :is_deleted, :true %>退会</td>
         <td></td>
         <td></td>
       </tr>
    </table>
    <div class="col-sm-3 offset-2">
      <%= f.submit "変更を保存",class: "btn btn-success btn-lg text-white" %>
    </div>
    <% end %>
  </div>
</div>