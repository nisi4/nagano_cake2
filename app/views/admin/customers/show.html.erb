<div class="container-fluid">
  <div class="row my-3 offset-sm-2">
    <h3 class="px-4" style="background-color:#e9ecef;"><%= @customer.full_name %>さんの会員情報</h3>
  </div>
  <div class="row offset-sm-2">
    <table class="table table-borderless">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>  
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>  
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>  
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>  
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>  
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>  
      <tr>
        <td>会員ステータス</td>
        <td class="font-weight-bold">
          <% if @customer.is_deleted == false %>
             <span class="text-success">有効</span>
          <% else %>
             <span class="text-secondary">退会</span>
          <% end %>
        </td>
      </tr>  
    </table>
  </div>
  <div class="row offset-sm-2">
    <div class="col-sm-3">
       <%= link_to edit_admin_customer_path(@customer.id) do %>
          <button class="btn btn-success text-white">編集する</button>
       <% end %>
    </div>
    <div class="col-sm-4">
       <%= link_to admin_orders_path do %>
          <button class="btn btn-primary text-white">注文履歴一覧を見る</button>
       <% end %>
    </div>
  </div>
</div>