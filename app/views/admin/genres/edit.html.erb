<div class="container-fluid">
  <div class="row my-5 offset-sm-2">
    <h3 class="px-4" style="background-color:#e9ecef;">ジャンル編集</h3>  
  </div>
  <%= form_with model: @genre,url: admin_genre_path,method: :patch do |f| %>
    <div class="row offset-sm-1 align-items-center">
        <div class="col-sm-2 d-flex justify-content-center">
          <p class="mb-2 mb-sm-0">ジャンル名</p>
        </div>
        <div class="col-sm-2 d-flex align-items-center justify-content-start">
        　<%= f.text_field :name %>
        </div>
        <div class="col-sm-3 d-flex justify-content-end">
          <%= f.submit "変更を保存",class: "btn btn-success btn-lg text-white px-5 mb-2 mb-sm-0" %>
        </div>
    </div>
  <% end %>