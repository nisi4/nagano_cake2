<div class="container-fluid">
  <div class="row my-5 offset-sm-2">
    <h3 class="px-4" style="background-color:#e9ecef;">ジャンル一覧・追加</h3>  
  </div>
  <%= form_with model: @genre,url: admin_genres_path,method: :post do |f| %>
    <div class="row offset-sm-1 align-items-center">
        <div class="col-sm-2 d-flex justify-content-center">
          <p class="mb-2 mb-sm-0">ジャンル名</p>
        </div>
        <div class="col-sm-2 d-flex align-items-center justify-content-start">
        　<%= f.text_field :name,placeholder: "ジャンル名" %>
        </div>
        <div class="col-sm-3 d-flex justify-content-end">
          <%= f.submit "新規登録",class: "btn btn-success btn-lg text-white px-5 mb-2 mb-sm-0" %>
        </div>
    </div>
  <% end %>
  <div class="row mt-5">
    <div class="col-sm-4 offset-1">　
      <table class="table table-hover">
        <thead>
          <tr class="bg-light">
            <th class="text-center">ジャンル</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td colspan="4" class="align-middle"><%= genre.name %></td>
              <td colspan="1" class="text-center">
               <%= link_to edit_admin_genre_path(genre.id) do %>
                 <button class="btn btn-success text-white">編集する</button>
               <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>