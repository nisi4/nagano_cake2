<div class="container-fluid">
  <div class="row my-4">
    <div class="col-sm-6 d-flex justify-content-start align-items-center offset-1">
      <h3 class="px-4 mb-0" style="background-color:#e9ecef;">商品詳細</h3>        
    </div>
  </div>
  <div class="row mt-5 offset-1">
      <div class="col-sm-4 mr-1">
        <%= image_tag @item.get_image,class: "img-fluid max-width:100%; height:auto;" %>  
      </div>
      <div class="col-sm-6">
          <table class="table table-borderless">
            <tbody>
              <colgroup>
                <col width="30%">
                <col width="70%" style="font-size:3rem;">
              </colgroup>
              <tr>
                <td><span>商品名</span></td>
                <td><%= @item.name %></td>
              </tr>
              <tr>
                <td><span>商品説明</span></td>
                <td><%= @item.introduction %></td>
              </tr>
              <tr>
                <td><span>ジャンル</span></td>
                <td><%= @item.genre.name %></td>
              </tr>
              <tr>
                <td>
                  <span>税込価格</span><br>
                  <span>(税抜価格)</span>
                </td>
                <td class="align-middle"><%= @item.add_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円</td>
              </tr>
              <tr>
                <td><span>販売ステータス</span></td>
                <td class="font-weight-bold">
                  <% if @item.is_active == true %>
                    <span class="text-success">販売中</span>
                  <% else %>
                    <span class="text-secondary">販売停止中</span>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
  </div>
  <div class="row my-3 justify-content-center">
    <%= link_to edit_admin_item_path(@item.id) do %>
      <button class="btn btn-success btn-lg text-white py-3 px-5">編集する</button>
    <% end %>
  </div>
</div>

