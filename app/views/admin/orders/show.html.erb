<div class="container-fluid">
  <div class="row my-3 offset-sm-2">
    <h3 class="px-4" style="background-color:#e9ecef;">注文履歴詳細</h3>
  </div>
  <div class="row offset-1">
    <div class="col-sm-10">
       <table class="table table-borderless">
          <tr>
            <th>購入者</th>
            <td><%= @order.customer.full_name %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.customer.full_name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
              <% form_with model: @order,url: admin_order_update_path,method: :patch do |f| %>
                <%= f.collection_select(:order_status,@order,:id,:name) %> <%= f.submit "更新",class: "btn btn-success btn-sm text-white" %>
              <% end %>
            </td>
          </tr>
       </table>
    </div>
  </div>
  <div class="row offset-1">
    <div class="col-sm-7">
       <table class="table">
          <thead>
             <tr>
               <th>商品名</th>
               <th>単価（税込）</th>
               <th>数量</th>
               <th>小計</th>
               <th>製作ステータス</th>
             </tr>
          </thead>
          <tbody>
             <% @order_items.each do |order_item| %>
             <tr>
               <td><%= order_item.item.name %></td>
               <td><%= order_item.price.to_s(:delimited) %></td>
               <td><%= order_item.amount %></td>
               <td><%= order_item.subtotal.to_s(:delimited) %></td>
               <td>
                 <% form_with model: order_item,url: admin_order_items_update_path,method: :patch do |f| %>
                   <%= f.collection_select(:product_status,@order_items,:id,:name) %> <%= f.submit "更新",class: "btn btn-success btn-sm text-white" %>
                 <% end %>    
               </td>
               <% total_price += order_item.subtotal %>
             </tr>
             <% end %>
          </tbody>
       </table> 
    </div>
    <div class="col-sm-2">
       <table class="table table-borderless">
          <tr>
            <th>商品合計</th>
            <td><%= total_price.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @postage %>円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= (total_price + @postage).to_s(:delimited) %></td>
          </tr>
       </table> 
    </div>
  </div>
</div>