<div class="container-fluid">
 <div class="row my-5 offset-sm-2">
  <h3 class="px-4" style="background-color:#e9ecef;">管理者ログイン</h3>
 </div>
 <div class="container-fluid">
  <%= form_with model: @admin,url: admin_session_path,method: :post do %>
   <div class="row offset-sm-3 align-items-center">
    <div class="col-sm-3">
      <p class="h5 pr-4 mb-4">メールアドレス</p>
    </div>
    <div class="col-sm-6 field mb-4">
      <input type="email" autofocus="autofocus" class="form-control">
    </div>
   </div>
   <div class="row offset-sm-3 align-items-center">
    <div class="col-sm-3">
      <p class="h5 pr-4 mb-0">パスワード</p>
    </div>
    <div class="col-sm-6 field">
     <input type="password" autocomplete="off" class="form-control">
    </div>
   </div>
   <div class="row offset-3 mt-5">
    <div class="col-3"></div>
    <div class="col-6 actions">
      <input type="submit" value="ログイン" class="btn btn-primary px-5">
    </div>
   </div>
  <% end %>
  
  <%= render "admin/shared/links" %>
 </div>
</div>
