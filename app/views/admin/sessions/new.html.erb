<div class="container-fluid">
 <div class="row my-5 offset-sm-2">
  <h3 class="px-4" style="background-color:#e9ecef;">管理者ログイン</h3>
 </div>
 <div class="container-fluid">
  <%= form_with model: @admin,url: admin_session_path,method: :post do |f| %>
   <div class="row offset-sm-3 align-items-center">
    <div class="col-sm-3 pr-0">
      <p class="h5 pr-4 mb-4">メールアドレス</p>
    </div>
    <div class="col-sm-6 mb-4">
      <%= f.text_field :email, size: 40,class: "form-control"  %>
    </div>
   </div>
   <div class="row offset-sm-3 align-items-center">
    <div class="col-sm-3">
      <p class="h5 pr-4 mb-0">パスワード</p>
    </div>
    <div class="col-sm-6">
      <%= f.password_field :password, size: 40, autocomplete: "current-password",class: "form-control" %>
    </div>
   </div>
   <div class="row offset-3 mt-5">
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "ログイン",class: "btn btn-primary px-5"  %>
    </div>
   </div>
  <% end %>
  
  <%= render "admin/shared/links" %>
 </div>
</div>
