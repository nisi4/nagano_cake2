<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <div class="container-fluid border-bottom border-1px border-dark">
      <div class="row">
        <div class="col-sm-3 my-3 my-sm-4 align-self-center mr-auto">
          <%= link_to root_path,class: "text-decoration-none text-dark" do %>
            <h2 class="mb-0"><span class="px-sm-3 py-sm-2">ながのCAKE</span></h2>
          <% end %>
        </div>
        <div class="col-sm-2 d-flex align-items-center">
          <h6>
            <% if customer_signed_in? %>
              ようこそ、<%= current_customer.last_name %>さん！
            <% else %>
            <% end %>
          </h6>
        </div>
        <div class="col-sm-6 pl-0 mr-1">
          <div class="row justify-content-sm-end">
            <nav class="navbar navbar-expand-md navbar-light bg-white">
              <button class="navbar-toggler" data-toggle="collapse" data-target="#dropdown">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="dropdown">
                <ul class="navbar-nav my-sm-4">
                  <% if admin_signed_in? %>
                    <li class="nav-item mx-3">
                      <%= link_to admin_items_path do %>
                        <button class="btn btn-outline-secondary" style="width:106px;">商品一覧</button>
                      <% end %>
                    </li>
                    <li class="nav-item mx-3">
                      <%= link_to admin_customers_path do %>
                        <button class="btn btn-outline-secondary" style="width:106px;">会員一覧</button>
                      <% end %>
                    </li>
                    <li class="nav-item mx-3">
                      <%= link_to admin_root_path do %>
                        <button class="btn btn-outline-secondary" style="width:125px;">注文履歴一覧</button>
                      <% end %>
                    </li>
                    <li class="nav-item mx-3">
                      <%= link_to admin_genres_path do %>
                        <button class="btn btn-outline-secondary" style="width:125px;">ジャンル一覧</button>
                      <% end %>
                    </li>
                    <li class="nav-item ml-3">
                      <%= link_to destroy_admin_session_path,method: :delete do %>
                        <button class="btn btn-outline-secondary" style="width:106px;">ログアウト</button>
                      <% end %>
                    </li>                    
                  <% elsif customer_signed_in? %>
                    <li class="nav-item mx-3">
                      <%= link_to customers_my_page_path do %>
                        <button class="btn btn-outline-secondary" style="width:106px;">マイページ</button>
                      <% end %>
                    </li>
                    <li class="nav-item mx-3">
                      <%= link_to items_path do %>
                        <button class="btn btn-outline-secondary" style="width:106px;">商品一覧</button>
                      <% end %>
                    </li>
                    <li class="nav-item mx-3">
                      <%= link_to cart_items_path do %>
                        <button class="btn btn-outline-secondary" style="width:106px;">カート</button>
                      <% end %>
                    </li>
                    <li class="nav-item ml-3">
                      <%= link_to destroy_customer_session_path,method: :delete do %>
                        <button class="btn btn-outline-secondary" style="width:106px;">ログアウト</button>
                      <% end %>
                    </li>
                  <% else %>
                    <li class="nav-item mx-3">
                      <%= link_to about_path do %>
                        <button class="btn btn-outline-secondary" style="width:90px;">About</button>
                      <% end %>
                    </li>
                    <li class="nav-item mx-3">
                      <%= link_to items_path do %>
                        <button class="btn btn-outline-secondary" style="width:90px;">商品一覧</button>
                      <% end %>
                    </li>
                    <li class="nav-item mx-3">
                      <%= link_to new_customer_registration_path do %>
                        <button class="btn btn-outline-secondary" style="width:90px;">新規登録</button>
                      <% end %>
                    </li>
                    <li class="nav-item ml-3">
                      <%= link_to new_customer_session_path do %>
                        <button class="btn btn-outline-secondary" style="width:90px;">ログイン</button>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </nav>
          </div>
          <div class="row">
            <div class="col-sm-6"></div>
            <div class="col-sm-6">
              <div class="input-group mb-4">
                <input type="text" id="icon-search" class="form-control input-group-prepend" placeholder="Search"></input>
                <span class="input-group-btn input-group-append">
                  <submit type="submit" id="btn-search" class="btn btn-outline-secondary"><i class="fas fa-search"></i></submit>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </header>  
    <%= yield %>
  </body>
</html>
