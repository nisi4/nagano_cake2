<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 mt-5">
           <table class="table table-borderless border" align="center" style="width:70%;">
               <tr class="border-bottom" align="center">
                 <th>ジャンル検索</th>
               </tr>
               <% @genres.each do |genre| %> 
               <tr>
                 <td>
                    <%= genre.name %>
                 </td>
               </tr>
               <% end %>
           </table> 
        </div>
        <div class="col-sm-9 mx-0">
           <div class="row mt-5 mb-3 align-items-end">
               <span class="h1 font-weight-bold px-3">商品一覧</span>
               <span class="h3">(全<%= @items.count %>件)</span>
           </div>
           <div class="row mr-5" style="font-size:0px;">
               <% @items.each do |item| %>
                        <div class="col-sm-3 h6 px-1">
                            <%= link_to item_path(item.id) do %>
                                <div class="mb-2">
                                    <%= image_tag item.get_image,class: "img-fluid" %>
                                </div>
                                <div class="mb-2">
                                    <%= item.name %>
                                </div>
                                <div class="mb-4">
                                    ¥<%= item.price.to_s(:delimited) %>
                                </div>
                            <% end %>
                        </div>
            　 <% end %>
           </div>
           <div class="row justify-content-center">
               <%= paginate @items %>
           </div>
        </div>
    </div>
</div>