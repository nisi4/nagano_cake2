<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 d-flex justify-content-center mt-5">
           <table class="table table-bordered" style="width:70%;">
               <tr align="center">
                 <th>ジャンル検索</th>
               </tr>
               <% @genres.each do |genre| %> 
               <tr>
                 <td>
                    <%= genre.name %>
                 </td>
               </tr>
               <% end %>
           </table> 
        </div>
        <div class="col-sm-9">
           <div class="row">
               <% @items.each do |item| %>
                　　<div class="col-sm-2">
                       <%= image_tag item.get_image,class: "img-fluid" %>
                       <%= item.name %><br>
                       ¥<%= item.price %>
                    </div>
            　 <% end %>
           </div>
           <div class="row justify-content-end">
               <p class="mr-5">全ての商品を見る></p>
           </div>
        </div>
    </div>
</div>