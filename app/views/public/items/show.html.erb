
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 mt-5">
            <table class="table table-borderless border" align="center" style="width:70%;">
                <tr class="border-bottom" align="center">
                    <th>ジャンル検索</th>
                </tr>
                <% @genres.each do |genre| %> 
                <tr>
                    <td>
                        <%= genre.name %>
                    </td>
                </tr>
               <% end %>
            </table> 
        </div>
        <div class="col-sm-9 mt-5">
            <div class="row">
                <div class="col-sm-5">
                    <%= image_tag.@item.get_image,class: "img-fluid" %>
                </div>
                <div class="col-sm-7">
                    
                </div>
            </div>
        </div>
    </div>
</div>