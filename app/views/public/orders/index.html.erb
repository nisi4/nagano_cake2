<div class="container-fluid">
    <div class="row my-4 offset-sm-1">
        <h4 class="px-4" style="background-color:#e9ecef;">注文履歴一覧</h4>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-11">
            <table class="table table-bordered">
                <colgroup>
                    <col width="10%">
                    <col width="50%">
                    <col width="10%">
                    <col width="10%">
                    <col width="10%">
                    <col width="10%">
                </colgroup>
                <thead>
                    <tr class="bg-light">
                        <th>注文日</th>
                        <th>配送先</th>
                        <th>注文商品</th>
                        <th>支払金額</th>
                        <th>ステータス</th>
                        <th>注文詳細</th>
                    </tr>
                </thead>
                <tbody>
                    <% @orders.each do |order| %>
                    <tr>
                        <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
                        <td>
                            〒<%= order.postal_code %><br>
                            <%= order.address %><br>
                            <%= order.name %>
                        </td>
                        <td>
                            <% @order_items = order.order_items.all %>
                            <% @order_items.each do |order_item| %>
                                <%= order_item.item.name %><br>
                            <% end %>
                        </td>
                        <td><%= order.payment.to_s(:delimited) %>円</td>
                        <td><%= order.order_status_i18n %></td>
                        <td><%= link_to "表示する",order_path(order.id),class: "btn btn-primary text-white" %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>