<div class="container-fluid">
  <div class="row my-4 offset-2">
     <h3 class="px-4" style="background-color:#e9ecef;">新規会員登録</h3>  
  </div>
  <div class="row offset-1">
    <div class="col-sm-9">
      <%= form_with model: @customer,url: customer_registration_path,method: :post do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tr>
          <td>名前</td>
          <td>(姓)</td>
          <td><%= f.text_field :last_name,placeholder: "令和",class: "form-control" %></td>
          <td>(名)</td>
          <td><%= f.text_field :first_name,placeholder: "道子",class: "form-control" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>(セイ)</td>
          <td><%= f.text_field :last_name_kana,placeholder: "レイワ",class: "form-control" %></td>
          <td>(メイ)</td>
          <td><%= f.text_field :first_name_kana,placeholder: "ミチコ",class: "form-control" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com",class: "form-control" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td></td>
          <td><%= f.text_field :postal_code,placeholder: "0000000",class: "form-control" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td></td>
          <td colspan="3"><%= f.text_field :address,placeholder: "東京都渋谷区代々木神園町0-0",class: "form-control" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td></td>
          <td><%= f.text_field :telephone_number,placeholder: "00000000000",class: "form-control" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>パスワード(6文字以上)</td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password",class: "form-control" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "新規保存",class: "btn btn-success btn-big text-white px-5" %></td>
          <td></td>
          <td></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row my-2 offset-1">
     <h3 class="px-4" style="background-color:#e9ecef;">既に登録済みの方</h3>  
  </div>
  <div class="row offset-1">
     <div class="col-sm-4 ml-5 mb-4">
        <%= link_to "こちら", new_customer_session_path %> からログインしてください。
    </div>   
  </div>
</div>
